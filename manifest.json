{
  "manifest_version": 2,

  "name": "MovieBrain",
  "description": "Customizable movie recommendations based on your IMDb ratings.",
  "version": "2.0.0",
  "homepage_url": "http://www.themoviebrain.com",
   "content_scripts": [
      {
        "matches": ["*://www.imdb.com/*"],
        "js": ["js/jquery-1.11.0.min.js", "js/detectimdb.js"]
      }
   ],
   "icons": { "16": "img/Moviebrain_logo_128x128.png",
           "48": "img/MovieBrain_logo_notext_48x48.png",
          "128": "img/MovieBrain_logo_notext_16x16.png" },
  "permissions": [
    "http://api.themoviebrain.com/",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "img/MovieBrain_logo_notext_16x16.png",
    "default_popup": "popup.html",
    "default_title": "MovieBrain - Find the right movie for you!"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
